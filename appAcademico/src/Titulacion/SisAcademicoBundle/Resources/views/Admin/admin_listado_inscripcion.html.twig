                  {
                    $("#btnlegalorden").attr("disabled", false);
                  }
                  else
                  {
                    $("#btnlegalorden").attr("disabled", true);
                  }

                   
         }

          
                $("#btnlegalorden").on("click",function(event){
                              if ($("#btnlegalorden").is('[disabled]'))
                                          {
                                              
                                          }
                                else
                                {
                    
                                  $("#btnlegalorden").attr("disabled", true);
                                    var idEstudiante='{{idUsuarioEst}}';
                                    var idCiclo='{{idCiclo}}';
